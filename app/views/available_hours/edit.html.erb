<!-- Validation failure messages -->
<% if @available_hour.errors.any? %>
  <% @available_hour.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Available Hour #<%= @available_hour.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_available_hour/<%= @available_hour.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for provider -->
      <div class="form-group">
        <label for="provider" class="control-label">
          Provider
        </label>

        <input type="text" id="provider" name="provider" placeholder="Provider" class="form-control" value="<%= @available_hour.provider %>">
      </div>

      <!-- Label and input for time -->
      <div class="form-group">
        <label for="time" class="control-label">
          Time
        </label>

        <input type="text" id="time" name="time" placeholder="Time" class="form-control" value="<%= @available_hour.time %>">
      </div>

      <button class="btn btn-warning">
        Update Available Hour
      </button>
      or
      <a href="/available_hours/<%= @available_hour.id %>">Cancel</a>
    </form>
  </div>
</div>
