<div class="page-header">
  <h3>Provider #<%= @provider.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Email</dt>
      <dd><%= @provider.email %></dd>

      <dt>Password</dt>
      <dd><%= @provider.password %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/providers" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>

<!-- A Provider has many available_hours -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Available Hours
      </li>

      <% @provider.available_hours.each do |available_hour| %>
        <li class="list-group-item">
          <a href="/available_hours/<%= available_hour.id %>">
            <%= available_hour.provider %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/available_hours/<%= available_hour.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/available_hours/<%= available_hour.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_available_hour/<%= available_hour.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
