<!-- Validation failure messages -->
<% if @child.errors.any? %>
  <% @child.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Child</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_child" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for guardian -->
      <div class="form-group">
        <label for="guardian" class="control-label">
          Guardian
        </label>

        <%= select_tag(:guardian, options_from_collection_for_select(Parent.all, :id, :email, @child.guardian), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Child
      </button>
      or
      <a href="/children">Cancel</a>
    </form>
  </div>
</div>
