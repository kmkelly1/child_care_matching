<div class="page-header">
  <h1>
    Parents
    <a href="/parents/new" class="btn btn-lg btn-success">New Parent</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>Actions</th>
      </tr>

      <% @parents.each do |parent| %>
      <tr>
        <td><%= parent.email %></td>
        <td><%= parent.password %></td>
        <td>
          <a href="/parents/<%= parent.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
