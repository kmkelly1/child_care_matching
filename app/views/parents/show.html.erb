<div class="page-header">
  <h3>Parent #<%= @parent.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Email</dt>
      <dd><%= @parent.email %></dd>

      <dt>Password</dt>
      <dd><%= @parent.password %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/parents" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>

<!-- A Parent has many children -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Children
      </li>

      <% @parent.children.each do |child| %>
        <li class="list-group-item">
          <a href="/children/<%= child.id %>">
            <%= child.guardian %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/children/<%= child.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <%if current_parent == child.guardian %>
              <a href="/children/<%= child.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>
              <a href="/delete_child/<%= child.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
